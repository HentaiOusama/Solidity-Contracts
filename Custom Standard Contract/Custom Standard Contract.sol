contract SignVerifier {
    bool public success;
    bytes32 public hashedMessage;
    bytes32 public hashUsedForSigning;

    function verifySign(address signer, address owner, bytes32 imageHash, bytes memory signature) external {
        // Js equivalent: -
        // const hashedMessage = Web3.utils.soliditySha3(owner, imageHash);
        hashedMessage = keccak256(abi.encodePacked(owner, imageHash));

        // Js equivalent: -
        // const hashUsedForSigning = web3.eth.accounts.hashMessage(hashedMessage);
        // This step is automatically performed by web3.eth.accounts.sign(...) before signing the hashedMessage.
        hashUsedForSigning = ECDSA.toEthSignedMessageHash(hashedMessage);

        // For generating signature in Js: -
        // const signature = web3.eth.accounts.sign(hashedMessage, privateKey);

        // Below line is used to recover the signing address and compare the result.
        success = (ECDSA.recover(hashUsedForSigning, signature) == signer);
    }
}
